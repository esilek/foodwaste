<script>




var typed = ["You have selected"];


document.getElementById("p1").innerHTML = typed;


function getCheckboxValues(form) {
  var values = [];
  var vehicles = form.vehicle;

  for (var i=0, iLen=vehicles.length; i<iLen; i++) {
    if (vehicles[i].checked) {
      values = [];
      values.push(vehicles[i].value);
    }
  }
  // Do something with values
document.getElementById("p1").innerHTML = values;
typed.push(values);
    document.getElementById("p1").innerHTML = typed;

  return values;

}





</script>

